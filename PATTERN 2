Print the following pattern
Pattern for N = 4

-----1
---23
--345
4567

C++ PROGRAM

#include<iostream>
using namespace std;


int main(){

       int n;
       cin>>n;
       int i=1;
       while(i<=n){
           int val=1;
           while(val<=n-i){
               cout<<" ";
               val=val+i;
           }
           int k=i;
           int j=1;
           while(j<=i){
               cout<<k;
               j=j+1;
               k=k+1;
           }
           cout<<endl;
           i=i+1;
       }
  
}


